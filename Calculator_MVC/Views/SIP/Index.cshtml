@model Calculator_MVC.Models.SIP;
@{
    ViewData["Title"] = "Index";
}
<html>
<head>
</head>
<body>
    <h4>Wel-Come To SIP Calculator</h4>
    <form asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-sm-3">
            <div class="text-center">
                <label asp-for="Amount" class="control-label">Amount in Monthly</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="text-center">
                <label asp-for="Rate" class="control-label">Rate</label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="text-center">
                <label asp-for="Time" class="control-label">Time in Year</label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div>
            <input class="btn btn-outline-primary" type="submit" asp-for="Total" value="Calculate" />
        </div>
        <hr />
        <div class="col-sm-3">
            <div class="text-center">
                <label asp-for="Total" class="control-label"><H6>Systematic Investment Plan</H6></label>
                <input asp-for="@ViewData["result"]" class="form-control" />
            </div>
        </div>
    </form>

</body>

</html>